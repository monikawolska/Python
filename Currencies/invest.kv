
<Invest>:
    BoxLayout:
        orientation: "vertical"

        Button:
            id: update_button
            size_hint: 1, 0.25
            on_release: root.update()
            text: "Zaktualizuj dane w bazie"

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.25

            Button:
                id: euro_button
                on_release: root.show_data_euro()
                text: "Euro"

            Button:
                id: dolar_button
                on_release: root.show_data_dolar()
                text: "Dolar"

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.25

            Label:
                id: current_price_date

            Label:
                id: current_price

        Label:
            id: currency_info
            size_hint: 1, 0.4

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.25

            Button:
                id: chart_200
                text: "200 dni"
                on_release: root.show_chart_200()

            Button:
                id: chart_50
                text: "50 dni"
                on_release: root.show_chart_50()

            Button:
                id: chart_7
                text: "7 dni"
                on_release: root.show_chart_7()

        BoxLayout:
            id: chart
            text: "Czemuuuuu"
