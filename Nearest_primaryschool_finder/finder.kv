<Finder>:
    PageLayout:

        font_size: 40
        color: 1,0,1,1

        canvas.before:
            BorderImage:
                source: 'Colorful_Wooden_Pencils_background.jpg'
                pos: self.pos
                size: self.size

        # first page
        BoxLayout:
            orientation: "vertical"
            canvas.before:
                BorderImage:
                    source: 'Colorful_Wooden_Pencils_background.jpg'


            Label:
                text: 'Do you want to update data'

            Button:
                id: update_button
                size_hint: 1, 0.25
                on_release:
                text: "Execute"

        # second page
        BoxLayout:
            orientation: "vertical"
            canvas.before:
                BorderImage:
                    source: 'Colorful_Wooden_Pencils_background.jpg'

            Label:
                text: 'Logopedist'

            GridLayout:
                cols: 2

                Label:
                    id: label1
                    text: 'Yes'
                CheckBox:
                    id: rbutton1
                    group: 'logopedist'
                    on_active: root.logopedist_click()
                Label:
                    id: label2
                    text: 'No'
                CheckBox:
                    id: rbutton2
                    group: 'logopedist'
                    on_active: root.logopedist_click()
                Label:
                    id: label2
                    text: r'Doesn\'t matter'
                CheckBox:
