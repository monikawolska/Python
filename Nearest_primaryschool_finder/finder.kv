<Background@Finder>:
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]
    canvas.before:
        BorderImage:
            source: 'Colorful_Wooden_Pencils_background.jpg'
            pos: self.pos
            size: self.size


<Finder>:

    # cover
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            BorderImage:
                source: 'Colorful_Wooden_Pencils_background.jpg'
                pos: self.pos
                size: self.size

        Label:
            text: "Find your nearest primary school in Warsaw"
            font_size: 40
            bold: True
            italic: True

    # first page
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            BorderImage:
                source: 'Colorful_Wooden_Pencils_background.jpg'
                pos: self.pos
                size: self.size


        Label:
            text: 'Do you want to update data?'
            font_size: 40
            bold: True
            italic: True

        Button:
            id: update_button
            size_hint: 1, 0.25
            on_release:
            text: "Execute"
        Button:
            id: update_button
            size_hint: 1, 0.25
            on_release:
            text: "Pass"

    # second page
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            BorderImage:
                source: 'Colorful_Wooden_Pencils_background.jpg'
                pos: self.pos
                size: self.size

        Label:
            text: 'Do you want to have the confirmation that in school there is logopedist?'

        GridLayout:
            cols: 2

            Label:
                id: label1
                text: 'Yes'
            CheckBox:
                id: rbutton1
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: 'No'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: r'I dont need such information'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()

        Label:
            text: '*Only small number of schools provide such information. It can cause in very limited choice.'

    # third page
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            BorderImage:
                source: 'Colorful_Wooden_Pencils_background.jpg'
                pos: self.pos
                size: self.size

        Label:
            text: 'Do you want to have the confirmation that in school there is psychologist?'

        GridLayout:
