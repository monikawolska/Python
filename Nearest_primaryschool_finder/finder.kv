<BackgroundColor@Widget>:
    text_size: self.width, None
    canvas.before:
        BorderImage:
            source: 'background.jpg'
            pos: self.pos
            size: self.size

<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    orientation: "vertical"

<Title@Label>
    bold: True
    italic: True
    color: 1, 0, 1, 1

<Finder>:

    # cover
    BackgroundBoxLayout:

        Title:
            text: "Find your nearest primary school in Warsaw"


    BackgroundBoxLayout:

        Title:
            text: 'Choose type of students'

        GridLayout:
            cols: 2

            Label:
                id: label1
                text: 'Children'
            CheckBox:
                id: rbutton1
                group: 'students'
                on_active: root.students_type(self, self.active, "Dzieci lub młodzież")
            Label:
                id: label2
                text: 'Adults'
            CheckBox:
                id: rbutton2
                group: 'students'
                on_active: root.students_type(self, self.active, "Dorośli")

    BackgroundBoxLayout:

        Title:
            text: 'Choose type of school'

        GridLayout:
            cols: 2

            Label:
                id: label1
                text: 'Public'
            CheckBox:
                id: rbutton1
                group: 'type'
                on_active: root.school_type(self, self.active, "publiczna")
            Label:
                id: label2
                text: 'Private'
            CheckBox:
                id: rbutton2
                group: 'type'
                on_active: root.school_type(self, self.active, "niepubliczna")
            Label:
                id: label2
                text: 'All'
            CheckBox:
                id: rbutton2
                group: 'type'
                on_active: root.school_type(self, self.active, ["niepubliczna", "publiczna"])

    BackgroundBoxLayout:

        Title:
            text: 'Do you want to have logopedist in school?'

        GridLayout:
            cols: 2

            Label:
                id: label1
                text: 'Yes'
            CheckBox:
                id: rbutton1
                group: 'logopedist'
                on_active: root.logopedist_click(self, self.active, ["TAK"])
            Label:
                id: label2
                text: 'No'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click(self, self.active, ["NIE"])
            Label:
                id: label2
                text: r'I dont need such information'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click(self, self.active, ["TAK", "NIE", ""])

        Label:
            text: '*Only small number of schools provide such information. It can cause in very limited choice.'

    # third page
    BackgroundBoxLayout:

        Title:
            text: 'Do you want to have psychologist in school?'

        GridLayout:
            cols: 2
            Label:
                id: label1
                text: 'Yes'
            CheckBox:
                id: rbutton1
                group: 'psychologist'
                on_active: root.psychologist_click(self, self.active, ["TAK"])
            Label:
                id: label2
                text: 'No'
            CheckBox:
                id: rbutton2
                group: 'psychologist'
                on_active: root.psychologist_click(self, self.active, ["NIE"])
            Label:
                id: label2
                text: r'I dont need such information'
            CheckBox:
                id: rbutton2
                group: 'psychologist'
                on_active: root.psychologist_click(self, self.active, ["TAK", "NIE", ""])

        Label:
            text: '*Only small number of schools provide such information. It can cause in very limited choice.'

    # fourth page
    BackgroundBoxLayout:

        Title:
            text: 'Do you want to have pedagogue in school?'

        GridLayout:
            cols: 2
            Label:
                id: answer
                text: 'Yes'
            CheckBox:
                id: pedagogue
                group: 'pedagogue'
                on_active: root.pedagogue_click(self, self.active, ["TAK"])
            Label:
                id: answer
                text: 'No'
            CheckBox:
                id: pedagogue
                group: 'pedagogue'
                on_active: root.pedagogue_click(self, self.active, ["NIE"])
            Label:
                id: answer
                text: r'I dont need such information'
            CheckBox:
                id: pedagogue
                group: 'pedagogue'
                on_active: root.pedagogue_click(self, self.active, ["TAK", "NIE", ""])

        Label:
            text: '*Only small number of schools provide such information. It can cause in very limited choice.'


    BackgroundBoxLayout:

        Title:
            text: 'What language would you like to have in school?'

        GridLayout:
            cols: 2
            Label:
                id: label1
                text: 'English'
            CheckBox:
                id: rbutton1
                group: 'language'
                on_active: root.language_click(self, self.active, "angielski")
            Label:
                id: label2
                text: 'German'
            CheckBox:
                id: rbutton2
                group: 'language'
                on_active: root.language_click(self, self.active, "niemiecki")
            Label:
                id: label2
                text: 'Spanish'
            CheckBox:
                id: rbutton3
                group: 'russian'
                on_active: root.language_click(self, self.active, "rosyjski")
            Label:
                id: label2
                text: 'French'
            CheckBox:
                id: rbutton2
                group: 'language'
                on_active: root.language_click(self, self.active, "francuski")
            Label:
                id: label2
                text: 'Italian'
            CheckBox:
                id: rbutton2
                group: 'language'
                on_active: root.language_click(self, self.active, "włoski")
            Label:
                id: label2
                text: 'Mandarin'
            CheckBox:
                id: rbutton2
                group: 'language'
                on_active: root.language_click(self, self.active, "chiński")
            Label:
                id: label2
                text: 'Ukrainian'
            CheckBox:
                id: rbutton2
                group: 'language'
                on_active: root.language_click(self, self.active, "ukraiński")
            Label:
                id: label2
                text: 'Arabic'
            CheckBox:
                id: rbutton2
                group: 'language'
                on_active: root.language_click(self, self.active, "arabski")



        Label:
            text: 'You can only choose one language'

    # fifth page
    BackgroundBoxLayout:

        Title:
            text: 'Please enter your address to best match the nearest primary school in Warsaw'

        GridLayout:
            cols: 2
            Label:
                id: city
                text: 'City'
            TextInput:
                id: address_city
                hint_text:'Enter city'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: 0.95, 0.5
            Label:
                id: address
                text: 'Postal Code'
            TextInput:
                id: address_code
                hint_text:'Enter code: XX-XXX'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: 0.95, 0.5
            Label:
                id: address
                text: 'Street'
            TextInput:
                id: address_street
                hint_text:'Enter street'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: 0.95, 0.5
            Label:
                id: address
                text: 'House number'
            TextInput:
                id: address_house
                hint_text:'Enter house number'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: 0.95, 0.5
            Button:
                text: 'Find school'
                on_release: root.nearest_school()

    # fifth page
    BackgroundBoxLayout:

        Title:
            text: 'Your nearest primary school is'

        Label:
            id: result
            text: ""