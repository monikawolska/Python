<BackgroundColor@Widget>:
    text_size: self.width, None
    canvas.before:
        BorderImage:
            source: 'Colorful_Wooden_Pencils_background.jpg'
            pos: self.pos
            size: self.size

<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    orientation: "vertical"

<Title@Label>
    text_size: 40
    bold: True
    italic: True
    color: 1, 0, 1, 1

<Finder>:

    # cover
    BackgroundBoxLayout:

        Title:
            text: "Find your nearest primary school in Warsaw"

    # first page
    BackgroundBoxLayout:

        Title:
            text: 'Do you want to update data?'

        Button:
            id: update_button
            size_hint: 1, 0.25
            on_release:
            text: "Execute"
        Button:
            id: update_button
            size_hint: 1, 0.25
            on_release:
            text: "Pass"

    # second page
    BackgroundBoxLayout:

        Title:
            text: 'Do you want to have the confirmation that in school there is logopedist?'

        GridLayout:
            cols: 2

            Label:
                id: label1
                text: 'Yes'
            CheckBox:
                id: rbutton1
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: 'No'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: r'I dont need such information'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()

        Label:
            text: '*Only small number of schools provide such information. It can cause in very limited choice.'

    # third page
    BackgroundBoxLayout:

        Title:
            text: 'Do you want to have the confirmation that in school there is psychologist?'

        GridLayout:
            cols: 2
            Label:
                id: label1
                text: 'Yes'
            CheckBox:
                id: rbutton1
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: 'No'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: r'I dont need such information'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()

        Label:
            text: '*Only small number of schools provide such information. It can cause in very limited choice.'

    # fourth page
    BackgroundBoxLayout:

        Title:
            text: 'Do you want to have the confirmation that in school there is pedagogue?'

        GridLayout:
            cols: 2
            Label:
                id: label1
                text: 'Yes'
            CheckBox:
                id: rbutton1
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: 'No'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: r'I dont need such information'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()

        Label:
            text: '*Only small number of schools provide such information. It can cause in very limited choice.'

    # fifth page
    BackgroundBoxLayout:

        Title:
            text: 'What language would you like to have in school?'

        GridLayout:
            cols: 2
            Label:
                id: label1
                text: 'Yes'
            CheckBox:
                id: rbutton1
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: 'No'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()
            Label:
                id: label2
                text: r'Doesn\'t matter'
            CheckBox:
                id: rbutton2
                group: 'logopedist'
                on_active: root.logopedist_click()

        Label:
            text: ''

    # fifth page
    BackgroundBoxLayout:

        Title:
            text: 'Please enter your address to best match the nearest primary school in Warsaw'

        GridLayout:
            cols: 2
            Label:
                id: address
                text: 'City'
            TextInput:
                id: input
                hint_text:'Enter text'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: 0.95, 0.5
                on_text: app.process()
            Label:
                id: address
                text: 'Street'
            TextInput:
                id: input
                hint_text:'Enter text'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: 0.95, 0.5
                on_text: app.process()
            Label:
                id: address
                text: 'House number'
            TextInput:
                id: input
                hint_text:'Enter text'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: 0.95, 0.5
                on_text: app.process()

    # fifth page
    BackgroundBoxLayout:

        Title:
            text: 'Your nearest primary school is'

        Label:
            id: result
            text: ''